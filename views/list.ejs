<%- include("header"); -%>
    <div class="box" id="heading">
        <h1><%= checkDay %></h1>
    </div>
    
    <div class="box">
        
        <% nextItem.forEach( function (item) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input onChange="this.form.submit()" name="checkbox" value="<%= item._id %>" type="checkbox">
                    <p> <%= item.name %> </p>
                </div>
                <input type="hidden" name="listName" value="<%= checkDay %>"></input>
            </form>
        <% }); %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= checkDay %>>+</button>
        </form>
    </div>
<%- include("footer"); -%>